{
  "name": "gptube",
  "version": "0.1.0",
  "private": true,
  "description": "The YouTube Tutorial Companion is a web application designed to transform YouTube video tutorials into structured, actionable guides. It allows users to input a YouTube video URL and receive a transcript, AI-generated summary, step-by-step instructions, and clarifications.",
  "main": "src/pages/index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "dev": "next dev -p 4000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write ./**/*.{js,jsx,ts,tsx,json,css,md,mjs}",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mreatwell/gptube.git"
  },
  "keywords": [],
  "author": "mreatwell",
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/mreatwell/gptube/issues"
  },
  "homepage": "https://github.com/mreatwell/gptube#readme",
  "dependencies": {
    "firebase": "^11.7.1",
    "firebase-admin": "^13.3.0",
    "next": "^15.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@storybook/addon-docs": "^9.0.0-rc.2",
    "@storybook/addon-onboarding": "^9.0.0-rc.2",
    "@storybook/addon-webpack5-compiler-swc": "^3.0.0",
    "@storybook/react": "^9.0.0-rc.2",
    "@storybook/react-webpack5": "^9.0.0-rc.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "axe-core": "^4.10.3",
    "commitlint": "^19.8.1",
    "eslint": "^9.26.0",
    "eslint-config-next": "^15.3.2",
    "eslint-config-prettier": "^10.1.3",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-storybook": "^9.0.0-rc.2",
    "husky": "^9.1.7",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.5.3",
    "prop-types": "^15.8.1",
    "storybook": "^9.0.0-rc.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
